#:include kv/homescreen.kv
#:include kv/loginscreen.kv


GridLayout:
    cols: 1
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#35477d")
                Rectangle:
                    size: self.size
                    pos: self.pos
           
        FloatLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#35477d")
                Rectangle:
                    size: self.size
                    pos: self.pos
          
        ScreenManager:
            size_hint: 1, 0.699
            pos_hint: {"top": .799, "left": 1}
            id: screen_manager
            HomeScreen:
                name: "home_screen"
                id: home_screen
            LoginScreen:
                name: "login_screen"
                id: login_screen
           
        Widget:
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#35477d")
                Rectangle:
                    size: self.size
                    pos: self.pos